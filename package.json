{
  "name": "node-simplecqrs",
  "version": "0.6.0",
  "description": "simple cqrs interfaces for node",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "npx jest",
    "prebuild": "npm run clean",
    "build": "npx tsc",
    "clean": "rimraf -G ./lib",
    "dev": "npx tsc --watch",
    "preversion": "npm run build && npm test",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "staged": "npx lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/houssemdevs/node-simplecqrs"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "cqrs",
    "simple",
    "nodejs",
    "command",
    "query",
    "interface",
    "abstract"
  ],
  "author": "GHIAT Houssem",
  "license": "ISC",
  "dependencies": {
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.5",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "typescript": "^3.4.1"
  },
  "pre-commit": [
    "staged"
  ],
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --config tslint.json --fix",
      "prettier --write --config prettier.config.js",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  }
}
